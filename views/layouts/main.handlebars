<!-- ./views/layouts/main.handlebars -->
<html>

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Todo List</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/stylesheets/bootstrap.css">
  <link rel="stylesheet" href="/stylesheets/css/all.css">
  <link rel="stylesheet" href="/stylesheets/main.css">
  {{#if indexCSS}}
  <link rel="stylesheet" href="/stylesheets/index.css">
  {{/if}}
  {{#if userCSS}}
  <link rel="stylesheet" href="/stylesheets/user.css">
  {{/if}}
  {{#if todoFormCSS}}
  <link rel="stylesheet" href="/stylesheets/todo_form.css">
  {{/if}}
  {{#if detailCSS}}
  <link rel="stylesheet" href="/stylesheets/detail.css">
  {{/if}}
  <link href="https://fonts.googleapis.com/css?family=Lobster&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Reem+Kufi&display=swap" rel="stylesheet">
</head>

<body>
  <div class="overlay"></div>

  <!--Navbar-->
  <nav class="navbar position-relative">
    <a href="/" class="navbar-brand text-dark font-weight-bolder border-bottom border-dark">My Todo List</a>

    <ul class="navbar-nav d-flex flex-row">
      {{#if user}}
      <li class="nav-item">
        <a href="/todos/new" class="new-task-btn"><i class="fas fa-plus py-1"></i><span
            class="ml-1 d-none d-md-inline">New
            Task</span></a>
      </li>
      {{/if}}
      <li class="nav-item ml-3">
        <a href="/users/logout" class="log-out-btn">{{#if user}}Log out{{else}}Login Now{{/if}}</a>
      </li>
    </ul>
  </nav>

  {{{body}}}

  <script src="/javascripts/popper.min.js"></script>
  <script src="/javascripts/jquery-3.4.1.js"></script>
  <script src="/javascripts/bootstrap.js"></script>
</body>

</html>